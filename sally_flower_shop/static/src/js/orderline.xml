<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="point_of_sale.Orderline" t-inherit-mode="extension">
        <xpath expr="//div[contains(@class, 'product-name')]" position="after">
            <div class="addon-names" t-if="state &amp; &amp; state.addon_text">
                <span style="font-size: 0.8em; color: #666;">
                    Add-ons: <t t-esc="addon_text"/>
                </span>
            </div>
        </xpath>
    </t>
</templates>
