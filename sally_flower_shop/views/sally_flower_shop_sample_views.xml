<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_product_only_form_view" model="ir.ui.view">
        <field name="name">product.product.only.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="is_flower_category" invisible="1"/>
                <field name="flower_id" invisible="not is_flower_category"/>
                <field name="last_watered_date" invisible="not is_flower_category"/>
            </xpath>
        </field>
    </record>
    <record id="sally_flower_view_form" model="ir.ui.view">
        <field name="name">sally.flower.view.form</field>
        <field name="model">sally.flower</field>
        <field name="arch" type="xml">
            <form string="Flower">
                <sheet>
                    <group>
                        <field name="common_name"/>
                        <field name="scientific_name"/>
                        <field name="season_start"/>
                        <field name="season_end"/>
                        <field name="watering_frequency"/>
                        <field name="watering_amount"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sally_flower_view_tree" model="ir.ui.view">
        <field name="name">sally.flower.view.tree</field>
        <field name="model">sally.flower</field>
        <field name="arch" type="xml">
            <tree string="Flowers">
                <field name="common_name"/>
                <field name="scientific_name"/>
                <field name="season_start"/>
                <field name="season_end"/>
                <field name="watering_frequency"/>
                <field name="watering_amount"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="sally_flower_shop_sample_action" model="ir.actions.act_window">
        <field name="name">Flowers</field>
        <field name="res_model">sally.flower</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menus -->
    <menuitem name="Sally Flower Shop"
              id="sally_flower_shop_menu_root"/>

    <menuitem name="Flowers"
              id="sally_flower_shop_sample_menu"
              parent="sally_flower_shop_menu_root"
              action="sally_flower_shop_sample_action"/>
</odoo>