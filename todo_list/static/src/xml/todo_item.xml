<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="todo_list.TodoItem">
              <li
                      class="list-group-item d-flex flex-row gap-2 align-items-center w-100 justify-content-between">
                  <div
                          class="d-flex flex-row gap-2 align-items-center">
                      <input class="form-control w-25" t-att-value="props.todo.number" t-model="state.newNumber"
                             t-on-keypress="onUpdateOrder" type="number" min="0"/>
                      <span t-attf-class="#{props.todo.done ? 'text-decoration-line-through' : ''}"
                            t-on-click="onUpdateState" t-out="props.todo.id + ' - ' + props.todo.text "/>
                  </div>
                  <i t-on-click="onRemoveTodo" class="ps-3 fa fa-times"/></li>

    </t>
</templates>