<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="todo_list.TodoList">
                <ul class="todo_list_items list-group mt-4">
                   <t t-if="props.todos &amp;&amp; props.todos.length">
                       <t t-foreach="props.todos" t-as="todo" t-key="todo.id">
                        <TodoItem todo="todo"/>
                   </t>
                   </t>
                    <t t-else="">
                        <p class="text-4xl text-danger">
                            No Todo Item Added
                        </p>
                    </t>
                </ul>
    </t>
</templates>